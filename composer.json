{
  "name": "lunr/vortex",
  "description": "Lunr.Vortex is a set of notification dispatchers for various platforms.",
  "keywords": [ "notifications", "apns", "fcm", "wns", "jpush", "email" ],
  "homepage": "https://github.com/lunr-php/lunr.vortex",
  "type": "library",
  "license": "MIT",
  "require": {
    "psr/log": ">=1.1",
    "m2mobi/apns-php": "dev-master",
    "phpmailer/phpmailer": "~6.4",
    "rmccue/requests": "~2.0",
    "php": ">=8.1",
    "ext-xml": "*"
  },
  "require-dev": {
    "lunr/halo": "dev-master",
    "phpunit/phpunit": ">=9.0 <9.6",
    "ext-xdebug": ">=3.1"
  },
  "config": {
    "optimize-autoloader": true,
    "platform": {
        "php": "8.1.0"
    }
  },
  "autoload": {
    "psr-4": {"Lunr\\Vortex\\": "src/Lunr/Vortex/"}
  }
}
